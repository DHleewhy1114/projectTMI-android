<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="5dp">
<com.google.android.material.card.MaterialCardView
    android:id="@+id/timeline_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow"
    app:cardBackgroundColor="@color/colorWhite"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeline_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/timeLineLeftMargin"
            android:layout_marginTop="16dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/timeline_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/timeline_author_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.4dp"
                app:layout_constraintLeft_toRightOf="@id/timeline_profile_image"
                >
                <TextView
                    android:id="@+id/timelne_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김미영"
                    android:textColor="@color/colorText"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="66dp"/>
                <TextView
                    android:id="@+id/timeline_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜"
                    android:textSize="14sp"
                    android:layout_marginLeft="66dp"
                    android:textColor="#8a000000"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/timelne_author"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeline_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/timeLineLeftMargin"
            app:layout_constraintTop_toBottomOf="@id/timeline_header"
            >
            <TextView
                android:id="@+id/timeline_picture"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/timeline_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/timeline_picture"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeline_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/timeLineLeftMargin"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@id/timeline_center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/timeline_reply_button"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@color/colorWhite"
                android:lineSpacingExtra="2sp"
                android:text="답글 달기"
                android:textAlignment="textStart"
                android:textColor="#646161"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/timeline_icon_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/like_it"
                    android:layout_height="16dp"
                    android:layout_width="18dp"
                    android:background="@color/colorWhite"
                    android:layout_marginRight="32dp"
                    android:src="@drawable/outline_thumb_up_black_18dp"
                    app:layout_constraintRight_toLeftOf="@id/timeline_bookmark"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/timeline_bookmark"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@color/colorWhite"
                    android:src="@drawable/outline_bookmark_border_black_18dp"
                    android:layout_marginRight="32dp"
                    app:layout_constraintRight_toLeftOf="@id/timeline_share"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/timeline_share"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@color/colorWhite"
                    android:src="@drawable/outline_share_black_18dp"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/added_reply_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>